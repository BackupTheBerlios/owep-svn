<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

  <!-- Librairies de tags -->
  <taglib>
    <taglib-uri>/WEB-INF/tld/template.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/template.tld</taglib-location>
  </taglib>

  <!-- Liste des Servlets -->
  <servlet> 
    <servlet-name>CListeTacheVisu</servlet-name> 
    <servlet-class>owep.controle.CListeTacheVisu</servlet-class> 
  </servlet> 
  <servlet-mapping> 
    <servlet-name>CListeTacheVisu</servlet-name> 
    <url-pattern>/Tache/ListeTacheVisu</url-pattern> 
  </servlet-mapping> 
  
  <servlet> 
    <servlet-name>CRapportActivite</servlet-name> 
    <servlet-class>owep.controle.CRapportActivite</servlet-class> 
  </servlet> 
  <servlet-mapping> 
    <servlet-name>CRapportActivite</servlet-name> 
    <url-pattern>/Tache/RapportActivite</url-pattern> 
  </servlet-mapping> 
  
  <!-- Configuration de la session -->
  <session-config>
	<session-timeout>30</session-timeout>
  </session-config>

</web-app>
